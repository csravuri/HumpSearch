<Window x:Class="HumpSearch.Views.FilePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HumpSearch.Views"
        mc:Ignorable="d"
        Title="Hump Search: File Preview" Height="450" Width="800">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label BorderBrush="Green" BorderThickness="2" Grid.Row="0" x:Name="nameLable"/>
        <ScrollViewer Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      VerticalContentAlignment="Top">
            <Border BorderBrush="Red"
                      BorderThickness="2">
                <TextBlock Margin="5,0,0,0" x:Name="txtPreviewBox" Cursor="IBeam"/>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
